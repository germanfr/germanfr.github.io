---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
	<id>{{ site.url }}{{ site.baseurl }}/blog/</id>
	<title>{{ site.title | xml_escape }}</title>
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	{% if site.author %}
		<author>
			<name>{{ site.author | xml_escape }}</name>
			<uri>{{ site.url | xml_escape }}</uri>
		</author>
	{% endif %}
	<link href="{{ site.url }}{{ site.baseurl }}{{ page.url }}" rel="self" type="application/atom+xml" />
	<link href="{{ site.url }}{{ site.baseurl }}/blog/" rel="alternate" type="text/html"/>
	<subtitle>{{ site.description | xml_escape }}</subtitle>

	{% assign per_page = site.paginate | default: 8 %}
	{% assign n_posts = per_page | times: 3 %}
	{% for post in site.posts limit: n_posts %}
	{% unless post.draft %}
		{% assign post_url = site.url | append: site.baseurl | append: post.url %}
		<entry>
			<id>{{ post_url }}</id>
			<title type="html">{{ post.title | smartify | strip_html | replace: '\n', ' ' | strip | xml_escape }}</title>
			<updated>{{ post.date | date_to_xmlschema }}</updated>
			<author>
				<name>{{ post.author | xml_escape }}</name>
				<uri>{{ site.url | xml_escape }}</uri>
			</author>
			<link href="{{ post_url }}" rel="alternate" type="text/html" title="{{ post.title | xml_escape }}" />
			{% if post.excerpt and post.excerpt != empty %}
				<summary type="html">
					{{ post.excerpt | strip_html | replace: '\n', ' ' | truncatewords: 64 | strip | xml_escape }}
					{% capture full_post_link %} <a href="{{ post_url }}">Read full article</a>{% endcapture %}
					{{ full_post_link | xml_escape }}
				</summary>
			{% endif %}
			<content type="html">
				{{ post.content | xml_escape }}
			</content>
			{% if post.category %}
				<category term="{{ post.category | xml_escape }}"/>
			{% endif %}
		</entry>
	{% endunless %}
	{% endfor %}
</feed>
